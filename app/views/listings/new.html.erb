<h1> create a new car </h1>
<%= form_tag "/listing" , method: :post do %>
  <div>
<%= label_tag :item, "item name" %>
<%= text_field_tag :item %>
</div>
<div>
<%= label_tag :description, "item description" %>
<%= text_field_tag :description %>
</div>
<div> 
<%= label_tag :price, "price of item" %>
<%= text_field_tag :price %>
</div>
<div>
  <%= label_tag :location, "where the items located" %>
  <%= text_field_tag :location %>
</div>
<div>
<%= submit_tag "Send" %>
</div>
<% end %>